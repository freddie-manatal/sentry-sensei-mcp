{
  "name": "sentry-sensei-mcp",
  "version": "1.0.0",
  "description": "MCP server for generating Sentry error reports with JIRA integration",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon src/index.js",
    "stdio": "node src/index.js",
    "test": "node tests/test-mcp.js",
    "lint": "eslint src/ tests/ --fix",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/ *.js *.json *.md",
    "format:check": "prettier --check src/ tests/ *.js *.json *.md",
    "check": "npm run lint && npm run format:check",
    "docs:start": "cd docs && npm start",
    "docs:build": "cd docs && npm run build",
    "docs:serve": "cd docs && npm run serve",
    "postinstall": "npm run docs:build"
  },
  "keywords": [
    "mcp",
    "sentry",
    "reports",
    "issues",
    "sse",
    "serverless"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.3",
    "@vercel/mcp-adapter": "^0.11.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "zod": "^3.25.71"
  },
  "bin": {
    "sentry-sensei": "./src/index.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  }
}
